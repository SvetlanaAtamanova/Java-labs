<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.paint.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane onKeyPressed="#onKeyPressed" prefHeight="318.0" prefWidth="446.0" stylesheets="@App2.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UserInterface.NewProductController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="119.0" prefWidth="445.0" spacing="15.0">
            <children>
            <Label text="Добавить товар" textFill="#5a9e8e" />
                <HBox alignment="CENTER" prefHeight="40.0" prefWidth="600.0" spacing="10.0">
                    <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" styleClass="heading-2" text="Title:" />
                        <TextField fx:id="fieldTitle" prefHeight="29.0" prefWidth="255.0" promptText="введите название продукта" styleClass="field-line" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="40.0" prefWidth="600.0" spacing="10.0">
                    <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" styleClass="heading-2" text="Price:" />
                        <TextField fx:id="fieldPrice" prefHeight="25.0" prefWidth="200.0" promptText="введите цену" styleClass="field-line" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="40.0" prefWidth="600.0" spacing="25.0">
                    <children>
                        <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#onClickAdd" styleClass="btn-info" text="Добавить" />
                        <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#onClickCancel" styleClass="btn-info" text="Назад" />
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>
            </children>
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="125.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
